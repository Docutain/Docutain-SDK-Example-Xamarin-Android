<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocutainSDKExampleXamarinAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/topBarsBackground</item>
        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface">
        <item name="colorSurface">@color/topBarsBackground</item>
        <item name="colorOnSurface">@color/topBarsForeground</item>
    </style>

    <!-- Define your custom Docutain theme -->
    <style name="Theme.DocutainSDK" parent="DocutainSDK.Theme.Default">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="docutain_colorSecondary">@color/primary</item>
    </style>

</resources>